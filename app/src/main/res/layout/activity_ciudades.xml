<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ciudades"
        android:orientation="vertical" android:background="@color/colorPrimaryDark">

    <TextView
            android:text="@string/tv_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_margin="16dp"
            android:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/btn_ciudad_tijuana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnCiudadTijuana"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</LinearLayout>